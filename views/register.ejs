<%- include('./partials/header_no_nav')%>

    <section class="body">
        <section class="login-overlay">
            <div class="signIn">
                <%- include('./partials/messages')%>

                    <form action="/register" method="POST" class="px-4 py-3">
                        <div class="mb-3">
                            <label for="firstname" class="form-label">First Name</label>
                            <input type="text" name="firstname" class="form-control" id="firstname"
                                value="<%= typeof firstname != 'undefined' ? firstname : '' %>" placeholder="John"
                                required>
                        </div>
                        <div class="mb-3">
                            <label for="lastname" class="form-label">Last Name</label>
                            <input type="text" name="lastname" class="form-control" id="lastname"
                                value="<%= typeof lastname != 'undefined' ? lastname : '' %>" placeholder="Doe"
                                required>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" name="email" class="form-control" id="email"
                                value="<%= typeof email != 'undefined' ? email : '' %>" placeholder="email@example.com"
                                required>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" id="password"
                                value="<%= typeof password != 'undefined' ? password : '' %>" placeholder="Password"
                                required>
                        </div>
                        <div class="mb-3">

                            <button type="submit" class="btn btn-primary">Register</button>
                    </form>

            </div>
            </div>
            </div>
        </section>
    </section>
    <%- include('./partials/footer')%>